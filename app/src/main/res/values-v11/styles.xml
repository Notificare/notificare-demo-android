<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->

	<style name="WindowTitleBackground" parent="@style/Widget.AppCompat.ActionBar">     
        <item name="android:background">@color/merlin</item>
        <item name="titleTextStyle">@style/WindowTitleColor</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/WindowTitleBackground</item>
        <item name="windowActionBar">true</item>
        <item name="android:titleTextStyle">@style/WindowTitleColor</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <style name="WindowTitleColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
