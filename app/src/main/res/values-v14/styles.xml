<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->

	<style name="WindowTitleBackground" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/merlin</item>
        <item name="android:titleTextStyle">@style/WindowTitleColor</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/WindowTitleBackground</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionOverflowButtonStyle">@style/WindowIconsColor</item>
	</style>

    <style name="WindowTitleColor" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowIconsColor" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
